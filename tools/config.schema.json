{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"url": {
			"description": "should be a URL string, beginning with either https: or ftp:",
			"type": "string",
			"pattern": "^(https?|ftp)\\:\\/\\/[a-zA-Z0-9][\\/\\.\\-\\:\\?\\=\\&\\#\\%\\!\\$\\~\\+\\w]+$"
		},
		"path": {
			"description": "must begin with '/'",
			"type": "string",
			"pattern": "^\\/"
		},
		"test_item": {
			"type": "object",
			"properties": {
				"from": {
					"$ref": "#/definitions/path"
				},
				"to": {
					"$ref": "#/definitions/url"
				}
			},
			"required": ["from", "to"]
		}
	},
	"properties": {
		"idspace": {
			"_comment": "See issue #82",
			"description": "must consist of letters, numbers, and underscores only, and must begin with a letter",
			"type": "string",
			"pattern": "^[A-Za-z][A-Za-z0-9_]+$"
		},
		"base_url": {
			"description": "must begin with '/obo'",
			"type": "string",
			"pattern": "^\\/obo",
			"suggestion": "/obo/"
		},
		"base_redirect": {
			"type": "string"
		},
		"products": {
			"type": "array",
			"items": {
				"type": "object",
				"patternProperties": {
					"\\.owl$": { "type": "string" },
					"\\.obo$": { "type": "string" }
				}
			}
		},
		"term_browser": {
			"description": "must be one of 'ontobee', 'ols' or 'custom'",
			"type": "string",
			"enum": [
				"ontobee",
				"ols",
				"custom"
			]
		},
		"example_terms": {
			"description": "include one or more examples IDs for exemplary ontology entries",
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"tests": {
			"type": "array",
			"items" : {
				"$ref": "#/definitions/test_item"
			}
		},
		"entries": {
			"description": "list the PURL mapping entries with origins and replacements",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"exact": {
						"_comment": "Note: JSON-Schema cannot ensure that `exact` mappings are unique",
						"$ref": "#/definitions/path"
					},
					"prefix": {
						"_comment": "Note: JSON-Schema cannot ensure that `prefix` mappings are unique",
						"$ref": "#/definitions/path"
					},
					"regex": {
						"_comment": "Note: JSON-Schema cannot ensure that `regex` mappings are unique",
						"type": "string"
					},
					"oneOf": [
						{"required": ["exact"]},
						{"required": ["prefix"]},
						{"required": ["regex"]}
					],
					"replacement": {
						"$ref": "#/definitions/url"
					},
					"status": {
						"description": "must be one of 'permanent', 'temporary', or 'see other'",
						"type": "string",
						"enum": [
							"permanent",
							"temporary",
							"see other"
						]
					},
					"tests": {
						"type": "array",
						"items" : {
							"$ref": "#/definitions/test_item"
						}
					}
				},
				"required": ["replacement"]
			}
		}
	},
	"required": ["idspace", "base_url", "term_browser"]
}
